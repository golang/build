FROM golang:1.20 AS build

COPY go.mod /app/go.mod
COPY go.sum /app/go.sum

WORKDIR /app

RUN go mod download

COPY . /app

RUN go build golang.org/x/build/cmd/relui

ENTRYPOINT go test -v ./cmd/relui/... ./internal/relui/... ./internal/workflow/...
